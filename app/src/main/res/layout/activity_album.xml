<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_album"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kr.co.teampierce.forfitproject.album_screen.albumActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/albumLayout"
        android:layout_weight="94.64"
        android:layout_height="200dp">




        <LinearLayout
            android:id="@+id/albumMenu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/compareButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="compare"
                android:onClick="onCompareClick"
                android:enabled="false" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="see"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="delete"
                android:enabled="false"
                android:onClick="onDeleteClick" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/albumRecyclerView"
            android:layout_below="@id/albumMenu"
            android:layout_weight="94.64"
            android:layout_height="600dp" />

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/zoom_plate"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:id="@+id/imgViewExpanded" />

</RelativeLayout>
